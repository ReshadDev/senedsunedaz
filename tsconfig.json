{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "noImplicitAny": false,
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true, // Added to allow compilation of JavaScript files
    "noEmit": false, // Changed to allow emitting compiled JavaScript files
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["**/*.docx"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js", // Added to include JavaScript files for compilation
    "src/**/*.jsx" // Added to include JSX files for compilation
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
